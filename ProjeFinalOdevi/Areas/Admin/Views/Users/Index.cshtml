@model ProjeFinalOdevi.Areas.Admin.ViewModels.UsersIndex
@{
    ViewBag.Title = "KULLANICI DUZENLE";

}
<div class="row mt-5 mb-5">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table class="table text-center">
                    <thead class="text-uppercase bg-primary">
                        <tr class="text-white">
                            <th scope="col">ID</th>
                            <th scope="col">Kullanıcı Adı</th>
                            <th scope="col">E-mail</th>
                            <th scope="col">Parola</th>
                            <th scope="col">Rolleri</th>
                            <th scope="col">İşlemler</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                        <tr>
                            <th scope="row">@user.Id</th>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.PasswordHash</td>
                            <td>@String.Join(", ", user.Roles.Select(role => role.name))</td>
                            <td class="pull-left" style="height:26px;">
                                    @*@Html.ActionLink("DÜZENLE", "EditUser", new { user.Id }, new { @class = "btn btn-flat btn-success", data_icon = "ti-settings", style = "margin-right:0; height:26px; padding-top:4px;" })
                                    @Html.ActionLink("PAROLA DEĞİŞTİR", "ResetPassword", new { user.Id }, new { @class = "btn btn-flat btn-danger", data_icon = "ti-pin", style = "margin-right:0; height:26px; padding-top:4px;" })
                                    @Html.ActionLink("SİL", "DeleteAcc", new { user.Id }, new { @class = "btn btn-flat btn-warning", data_icon = "ti-pin", style = "margin-right:0; height:26px; padding-top:4px;" })*@
                                    <a href="@Url.Action("EditUser",new { user.Id})" class="btn btn-flat btn-success" style = "margin-right:0; height:26px; padding-top:4px;"><i class="ti-user"></i> DÜZENLE</a>
                                    <a href="@Url.Action("ResetPassword",new { user.Id})"  class="btn btn-flat btn-danger" style = "margin-right:0; height:26px; padding-top:4px;"><i class="ti-settings"></i> PAROLA SIFIRLA</a>
                                    <a href="@Url.Action("DeleteAcc",new { user.Id})" data-post="@user.Username Kullanıcısını Silmek İstediğinize Emin Misiniz?" class="btn btn-flat btn-warning" style = "margin-right:0; height:26px; padding-top:4px;"><i class="ti-trash"></i> SİL</a>

                                
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>