@model ProjeFinalOdevi.ViewModels.StockNew
@{
    ViewBag.Title = "ÜRÜN EKLE";

}
<div class="col-12">
    <div class="card mt-5">
        <div class="card-body">
            <h4 class="header-title">YENİ ÜRÜN EKLE</h4>
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label for="example-text-input" class="col-form-label">Ürün Açıklaması:</label>
                    @Html.TextBoxFor(u => u.stock_desc, new { @class = "form-control", @id = "description" })
                    @Html.ValidationMessageFor(u => u.stock_desc)
                </div>
                <div class="form-group">
                    <label for="example-search-input" class="col-form-label">Stok Adeti:</label>
                    @Html.TextBoxFor(u => u.stock_number, new { @class = "form-control", @id = "quantityInStock", @onkeypress = "return isNumber(event)" })
                    @Html.ValidationMessageFor(u => u.stock_number)
                </div>
                <label for="example-email-input" class="col-form-label">Birim Fiyatı</label>
                <div class="input-group mb-3" style="max-width:25%; min-width:200px !important;">
                    <div class="input-group-prepend">
                        <span class="input-group-text">₺</span>
                    </div>
                    @Html.TextBoxFor(u => u.unit_price, new { style = "height:40px !important;", @class = "form-control", @id = "unitPrice", @onkeypress = "return isNumber(event)", placeholder = "Birim Fiyatı" })
                    <div class="input-group-append">
                        <span class="input-group-text">.00</span>
                    </div>
                    <div class="input-group-prepend">
                        <span class="input-group-text">₺</span>
                    </div>
                    @Html.ValidationMessageFor(u => u.unit_price)
                </div>
                <button type="submit" class="btn btn-flat btn-primary btn-lg btn-block" style="font-weight:bolder">YENİ ÜRÜN EKLE</button>
            }
            <br />
            <center>veya @Html.RouteLink("Vazgeç", "Stocks", new { id = @Model.user_id })</center>
        </div>
    </div>
</div>