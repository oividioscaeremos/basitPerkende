@model ProjeFinalOdevi.ViewModels.StockViewOne
@{
    ViewBag.Title = "ÜRÜN DETAY";

}
<div class="col-12">
    <div class="card mt-5">
        <div class="card-body">
            <h4 class="header-title">ÜRÜN GÖRÜNTÜLE</h4>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label for="example-text-input" class="col-form-label">Ürün Açıklaması:</label>
                    @Html.TextBoxFor(u => u.stock.Description, new { @class = "form-control", @id = "description" })
                </div>
                <div class="form-group">
                    <label for="example-search-input" class="col-form-label">Stok Adeti:</label>
                    @Html.TextBoxFor(u => u.stock.Quantityinstock, new { @class = "form-control", @id = "quantityInStock", @onkeypress = "return isNumber(event)" })

                </div>
                <label for="example-email-input" class="col-form-label">Birim Fiyatı</label>
                <div class="input-group mb-3" style="max-width:25%; min-width:200px !important;">
                    <div class="input-group-prepend">
                        <span class="input-group-text">₺</span>
                    </div>
                    @Html.TextBoxFor(u => u.stock.Unitprice, new { style = "height:40px !important;", @class = "form-control", @id = "unitPrice", @onkeypress = "return isNumber(event)",placeholder = "Birim Fiyatı" })
                    <div class="input-group-append">
                        <span class="input-group-text">.00</span>
                    </div>
                    <div class="input-group-prepend">
                        <span class="input-group-text">₺</span>
                    </div>
                </div>
                <button type="submit" class="btn btn-flat btn-primary btn-lg btn-block" style="font-weight:bolder">ÜRÜNDEKİ DEĞİŞİKLİKLERİ KAYDET</button>
            }
            <br />
            <center>veya @Html.RouteLink("Vazgeç", "Stocks", new { @Model.stock.Belongstouser.Id })</center>
        </div>
    </div>
</div>