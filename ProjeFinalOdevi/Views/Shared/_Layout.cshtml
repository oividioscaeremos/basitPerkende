@using System.Web.Optimization
@{ 
    var userData = Database.Session.Query<ProjeFinalOdevi.Models.User>().FirstOrDefault(u => u.Username == Html.ViewContext.HttpContext.User.Identity.Name);

}
    <!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewBag.title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="../../Content/images/icon/favicon.ico">
    @Styles.Render("~/projStyles")
    
</head>
<body class="body-bg">
    <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
    <!-- preloader area start -->
    <div id="preloader">
        <div class="loader"></div>
    </div>
    <!-- preloader area end -->
    <!-- main wrapper start -->
    <div class="horizontal-main-wrapper">
        <!-- main header area start -->
        <div class="mainheader-area">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-3">
                        <div class="logo">
                            <a href="index.html"><img src="../../Content/images/logo.png" alt="logo"></a>
                        </div>
                    </div>
                    <!-- profile info & task notification -->
                    <div class="col-md-9 clearfix text-right">
                        <div class="d-md-inline-block d-block mr-md-4">
                            <ul class="notification-area">
                                <li id="full-view"><i class="ti-fullscreen"></i></li>
                                <li id="full-view-exit"><i class="ti-zoom-out"></i></li>
                                <a href="@Url.RouteUrl("logout")">
                                    <li class="dropdown" style="
                                    visibility:@(User.Identity.IsAuthenticated == true ? "visible" : "hidden")
                                        ">
                                        <i class="ti-power-off"></i>
                                    </li>
                                </a>
                            </ul>
                        </div>
                        <div class="clearfix d-md-inline-block d-block">
                            <div class="user-profile m-0">
                                <img class="avatar user-thumb" src="../../Content/images/author/avatar.png" alt="avatar">
                                <h4 class="user-name">
                                    @if (User.Identity.IsAuthenticated)
                                    {

                                    <a style="color:white;" href="@Url.Action("ViewUser", "Home" ,new { id = userData.Id })">@User.Identity.Name</a>
                                    }
                                    else
                                    {
                                        <a style="color:white;" href="@Url.RouteUrl("login")">Login</a>
                                    }
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- main header area end -->
        <!-- header area start -->
        <div class="header-area header-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-9  d-none d-lg-block">
                        <div class="horizontal-menu">
                            <nav>
                                <ul id="nav_menu">
                                    <li class="@(((ViewContext.RouteData.Values["Controller"].ToString() == "Home") && ViewContext.RouteData.Values["Action"].ToString() == "Index") ? "active" : "")">
                                        <a href="@Url.RouteUrl("Home")"><i class="ti-home"></i> Ana Sayfa</a>
                                    </li>
                                    <li class="@(((ViewContext.RouteData.Values["Controller"].ToString() == "Stock")) ? "active" : "")">
                                        <a href="@Url.RouteUrl("Stocks", new { userData.Id })"><i class="ti-list"></i> Ürünler</a>
                                    </li>
                                    <li class="@(((ViewContext.RouteData.Values["Controller"].ToString() == "Sales")) ? "active" : "")">
                                        <a href="@Url.RouteUrl("Sales", new { userData.Id })"><i class="ti-list"></i> Satışlar</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    
                    <div class="col-12 d-block d-lg-none">
                        <div id="mobile_menu"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- header area end -->
        <!-- page title area end -->
        <div class="main-content-inner">
            <div class="container">
                <div class="row">
                    @RenderBody()
                </div>
            </div>
        </div>
        <!-- main content area end -->
        <!-- footer area start-->
        <footer>
            <div class="footer-area" style="bottom: 0px; position:absolute !important; width: 100%">
                <p>© Copyright 2018. All right reserved. Template by <a href="https://colorlib.com/wp/">Colorlib</a>.</p>
            </div>
        </footer>
        <!-- footer area end-->
    </div>
    <!-- main wrapper start -->
    <!-- jquery latest version -->
    <!-- Example jQuery Masking Script -->

    @Scripts.Render("~/projScripts")

    <!-- start chart js -->
    <script type="text/javascript">
        $(document).ready(function ($) {
            $('#phoneNumber').inputmask("+\\90(999)999-99-99");
            $('#faxNumber').inputmask("+\\90(999)999-99-99");
            $('#IBAN').inputmask('TR 99 9999 9999 9999 9999 99', {
                placeholder: ' ____ ____ ____ ____ ____ __'
            });
            
        });

        function isNumber(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            }
            return true;
        }
    </script>
</body>
</html>
